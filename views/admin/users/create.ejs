<%- include('../../partials/header.ejs') %>
<body>
  <%- include('../../partials/navbar.ejs') %> 
  <div class="container">
    <div class="card mt-4">
      <div class="card-header">
        <h2>Cadastro de Usuário</h2>
      </div>
      <div class="card-body">
        <form method="POST" action="/users/create">
          <label class="mt-4">Nome</label>
          <input class="form-control" type="text" name="name" placeholder="Digite o nome do usuário" required>

          <label class="mt-4">E-mail</label>
          <input class="form-control" type="email" name="email" placeholder="email@exemplo.com" required>

          <label class="mt-4">Senha</label>
          <input class="form-control" type="password" name="password" placeholder="*******" required>

          <label class="mt-4">Confirmação de Senha</label>
          <input class="form-control" type="password" name="passwordConfirm" placeholder="*******" required>

          <button class="btn btn-success w-100 mt-4">Cadastrar</button>
        </form>
      </div>
    </div>
  </div> 
</body>
